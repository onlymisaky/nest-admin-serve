{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "config/*.yaml"
      },
      {
        "include": "../db/sql.sql",
        "outDir": "./dist/db"
      }
    ],
    "plugins": [],
    "tsConfigPath": "tsconfig.json"
  },
  "generateOptions": {
    "spec": false
  }
}
